<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linearLayoutCompat" android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
    >
        <TextView
                android:text="Name            : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="24sp" android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="Quantity        :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView20"
                android:textSize="24sp" android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/drinknamecart" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="40dp"/>
        <TextView
                android:text="Price              :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/quantitycart" android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"/>


        <TextView
                android:text="Your Cart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/drinknamecart"
                android:textSize="24sp"
                android:singleLine="false"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                app:layout_constraintStart_toEndOf="@+id/textView7" android:layout_marginStart="5dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.539"
                app:layout_constraintTop_toTopOf="@+id/textView7" android:layout_marginEnd="5dp"/>
        <TextView
                android:text="Drinks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/quantitycart"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/textView20"
                app:layout_constraintTop_toTopOf="@+id/textView20" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="5dp" android:layout_marginStart="5dp"/>

        <TextView
                android:text="Quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/dayliquantityCart"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/textView8" android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@+id/textView8"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.601"
                android:layout_marginEnd="5dp"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_delete"
                android:id="@+id/imageView4"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/dayliquantityCart" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>