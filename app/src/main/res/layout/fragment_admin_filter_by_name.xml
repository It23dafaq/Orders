<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:text="TotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            android:textSize="16sp" android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="20dp"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/spinner3"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
            app:layout_constraintStart_toEndOf="@+id/editText" android:layout_marginStart="8dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/order_recycle_view"
            android:layout_marginStart="8dp" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/totalpricetext" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:id="@+id/bynamerecyvler"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginTop="10dp"/>
    <TextView
            android:text="TotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalpricetext"
            android:textSize="16sp" android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name of Waitres"
            android:ems="10"
            android:imeOptions="actionDone"
            android:id="@+id/editText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:drawableRight="@drawable/ic_search_black_24dp"
            android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>