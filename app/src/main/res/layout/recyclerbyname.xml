<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:id="@+id/linearLayoutCompat" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp">
        <TextView
                android:text="Username      :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="24sp" android:textStyle="bold"/>
        <TextView
                android:text="Drinks       :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView20"
                android:textSize="24sp" android:textStyle="bold" android:layout_marginTop="20dp"/>
        <TextView
                android:text="Quantity :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" android:textSize="24sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>
        <TextView
                android:text="Price       :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_marginTop="10dp"
                android:textSize="24sp" android:textStyle="bold"/>
        <TextView
                android:text="Time       :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                android:layout_marginTop="10dp"
                android:textSize="24sp" android:textStyle="bold"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat"
            android:layout_marginStart="30dp">

        <TextView
                android:text="Your Cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/NameOfWaiter"
                android:textSize="24sp"
                android:singleLine="false"
                android:ellipsize="end"
                android:scrollHorizontally="true"/>
        <TextView
                android:text="Drinks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/drinkBywaiter"
                android:layout_marginTop="20dp"
                android:textSize="24sp"/>

        <TextView
                android:text="Quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/QuantityBywaiter"
                android:layout_marginTop="10dp"
                android:textSize="24sp"/>

        <TextView
                android:text="Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/PriceBywaiter"
                android:textSize="24sp"
                android:layout_marginTop="10dp"
        />
        <TextView
                android:text="Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Time_Orderbywaiter"
                android:textSize="24sp"
                android:layout_marginTop="10dp"
        />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>