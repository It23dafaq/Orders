<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp" android:layout_marginTop="10dp" android:id="@+id/linearLayoutCompat">
        <TextView
                android:text="Username : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="24sp" android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="Drinks        :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView20"
                android:textSize="24sp" android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/NameOfWaiter" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="40dp"/>
        <TextView
                android:text="Quantity :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/drinkBywaiter" android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="Price       :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textSize="24sp" android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/QuantityBywaiter" android:layout_marginTop="40dp"/>
        <TextView
                android:text="Time       :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                android:textSize="24sp" android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/PriceBywaiter"
                android:layout_marginTop="40dp"/>


        <TextView
                android:text="Your Cart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/NameOfWaiter"
                android:textSize="24sp"
                android:singleLine="false"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                app:layout_constraintStart_toEndOf="@+id/textView7" android:layout_marginStart="5dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.539"
                app:layout_constraintTop_toTopOf="@+id/textView7" android:layout_marginEnd="5dp"/>
        <TextView
                android:text="Drinks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/drinkBywaiter"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/textView20"
                app:layout_constraintTop_toTopOf="@+id/textView20" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="5dp" android:layout_marginStart="5dp"/>

        <TextView
                android:text="Quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/QuantityBywaiter"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/textView8" android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@+id/textView8"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.601"
                android:layout_marginEnd="5dp"/>

        <TextView
                android:text="Price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/PriceBywaiter"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@+id/textView10" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="5dp"/>
        <TextView
                android:text="Time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/Time_Orderbywaiter"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="@+id/textView21" app:layout_constraintStart_toEndOf="@+id/textView21"
                android:layout_marginStart="5dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="5dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>