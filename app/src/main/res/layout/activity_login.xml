<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.LoginActivity" android:background="@color/colorPrimary">

    <ImageView android:layout_width="wrap_content" android:layout_height="200dp"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
               android:layout_marginStart="8dp" android:layout_marginTop="32dp"
               app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
               app:layout_constraintBottom_toTopOf="@+id/emailLogin"
               android:src="@drawable/prive"
               android:background="@color/colorAccent" android:id="@+id/imageView3"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:text="dad"
            android:minHeight="32dp"
            android:drawablePadding="10dp"
            android:id="@+id/emailLogin"
            android:drawableStart="@android:drawable/ic_dialog_email"
            android:background="@color/colorAccent"
            android:hint="Please enter your email address"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="30dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:text="234"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:minHeight="32dp"
            android:drawablePadding="10dp"
            android:id="@+id/passLogin"
            app:layout_constraintStart_toStartOf="@+id/emailLogin"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/emailLogin"
            app:layout_constraintEnd_toEndOf="@+id/emailLogin"
            android:drawableLeft="@android:drawable/ic_partial_secure" android:background="@color/colorAccent"
            android:hint="Please enter your password"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_btn" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/passLogin" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:background="@color/colorAccent"/>

</androidx.constraintlayout.widget.ConstraintLayout>