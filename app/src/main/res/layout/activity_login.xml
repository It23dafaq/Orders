<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.LoginActivity" android:background="@color/colorPrimary">
    <ImageView android:layout_width="wrap_content" android:layout_height="200dp"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
               android:layout_marginStart="8dp" android:layout_marginTop="32dp"
               app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
               app:layout_constraintBottom_toTopOf="@+id/emailLogin"
               android:src="@drawable/prive"
               android:background="@color/colorAccent" android:id="@+id/imageView3"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailLogin" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.521" android:drawableLeft="@android:drawable/ic_dialog_email"
            android:background="@color/colorAccent" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:hint="Please enter your email address"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passLogin"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/emailLogin" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:drawableLeft="@android:drawable/ic_partial_secure" android:background="@color/colorAccent"
            android:hint="Please enter your password"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_btn" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/passLogin" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:background="@color/colorAccent"/>
    <TextView
            android:text="You dont have account Click Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goRegister"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/login_btn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textColorLink="#2196F3"
            android:textSize="20sp" android:textColor="@android:color/holo_blue_light"/>
</androidx.constraintlayout.widget.ConstraintLayout>